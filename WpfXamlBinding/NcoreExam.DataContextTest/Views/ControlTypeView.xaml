<UserControl x:Class="NcoreExam.DataContextTest.Views.ControlTypeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NcoreExam.DataContextTest.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="DATA.CONTROL.CONTROLTYPE">
            <Border>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding Name}"/>
                    <TextBlock Grid.Row="1" Text="{Binding ControlType}" Foreground="#999999"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <ListBox x:Name="lb" ItemTemplate="{StaticResource DATA.CONTROL.CONTROLTYPE}"/>
    </Grid>
</UserControl>
